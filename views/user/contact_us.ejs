     <%-include("navbar.ejs")%>

 
 <!-- Hero Section -->
  <section class="hero-section-img">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="hero-title display-4 fw-bold mb-4 animate__animated animate__fadeInDown">Let's Connect</h1>
          <p class="hero-subtitle lead mb-5 animate__animated animate__fadeInUp animate__delay-1s">
            "Want to know More? Reach out to us!""
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-5 my-5">
    <div class="container">
      <div class="row g-4">
        <!-- Contact Info Column -->
        <div class="col-lg-5">
          <div class="contact-card p-4 p-lg-5 h-100">
            <h2 class="section-title-1">Contact Information</h2>
            
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="bi bi-geo-alt-fill"></i>
              </div>
              <div class="contact-info-text">
                <h5 class="fw-bold mb-1">Our Location</h5>
                <p class="mb-0 text-secondary"><%=contactinfo.location%></p>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="bi bi-telephone-fill"></i>
              </div>
              <div class="contact-info-text">
                <h5 class="fw-bold mb-1">Phone Number</h5>
                <p class="mb-0 text-secondary"><%=contactinfo.phone%></p>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="bi bi-envelope-fill"></i>
              </div>
              <div class="contact-info-text">
                <h5 class="fw-bold mb-1">Email Address</h5>
                <p class="mb-0 text-secondary"><%=contactinfo.email%></p>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="bi bi-clock-fill"></i>
              </div>
              <div class="contact-info-text">
                <h5 class="fw-bold mb-1">Working Hours</h5>
                <p class="mb-0 text-secondary"><%=contactinfo.working_hours%></p>
                <!-- <p class="mb-0 text-secondary">Saturday: 10:00 AM - 4:00 PM</p> -->
              </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex mt-5">
              <a href="https://wa.me/+919146848704" target="_blank" class="btn btn-whatsapp me-md-2">
                <i class="bi bi-whatsapp me-2"></i>Chat on WhatsApp
              </a>
              <a href="tel:+919146848704" class="btn-contact text-decoration-none text-light">
                <i class="bi bi-telephone-outbound me-2"></i>Call Us
              </a>
            </div>
          </div>
        </div>
        
        <!-- Contact Form Column -->
        <div class="col-lg-7">
          <div class="contact-card p-4 p-lg-5 h-100">
            <h2 class="section-title-1">Send Us a Message</h2>
            <p class="text-secondary mb-4">Have questions or need assistance? Fill out the form below and we'll get back to you within 24 hours.</p>
            
            <form>
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="firstName" class="form-label">First Name <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="firstName" placeholder="Enter First Name" required>
                </div>
                <div class="col-md-6">
                  <label for="lastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="lastName" placeholder="Enter Last Name" required>
                </div>
                
                <div class="col-md-6">
                  <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                  <input type="email" class="form-control" id="email" placeholder="Enter Email" required>
                </div>
                
                <div class="col-md-6">
                  <label for="phone" class="form-label">Phone Number</label>
                  <input type="tel" class="form-control" id="phone" placeholder="Enter Mobile Number">
                </div>
                
                <div class="col-12">
                  <label for="subject" class="form-label">Subject <span class="text-danger">*</span></label>
                  <select class="form-select" id="subject" required>
                    <option value="" selected disabled>Select a subject</option>
                    <option>General Inquiry</option>
                    <option>Support Request</option>
                    <option>Feedback</option>
                    <option>Partnership</option>
                    <option>Other</option>
                  </select>
                </div>
                
                <div class="col-12">
                  <label for="message" class="form-label">Your Message <span class="text-danger">*</span></label>
                  <textarea class="form-control" id="message" rows="5" placeholder="Type your message here..." required></textarea>
                </div>
                
  
                
                <div class="col-12 mt-4">

                  <!-- <button type="submit" class="px-4 py-2"> -->

                  <button type="submit" class="btn-contact px-4 py-2">

                    <i class="bi bi-send-fill me-2"></i>Send Message
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <!-- Map Section -->
      <div class="row mt-4">
        <div class="col-12">
          <div class="contact-card p-4 p-lg-5 mt-4">
            <h2 class="section-title-1">Find Us on Map</h2>
            <div class="map-container mt-3">
              <iframe 
                src="<%=contactinfo.map_link%>"
                width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy">
              </iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
    <%-include("footer.ejs")%>
