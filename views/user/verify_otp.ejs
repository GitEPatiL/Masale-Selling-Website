<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4 shadow rounded-4">
        <h4 class="mb-3 text-center">Verify OTP</h4>

        <form action="/verify_otp" method="POST">
          <div class="mb-3">
            <label for="otp" class="form-label">Enter OTP sent to your email</label>
            <input type="number" name="otp" id="otp" class="form-control" required>
          </div>

          <div class="d-flex justify-content-between">
            <a href="/forget_password" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Verify OTP</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
