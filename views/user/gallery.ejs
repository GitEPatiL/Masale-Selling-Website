
    <%-include("navbar.ejs")%>

    <!-- Hero Section -->
    <section class="hero-section-img">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="hero-title display-4 fw-bold mb-4">Our Gallery</h1>
                    <p class="hero-subtitle lead mb-5">
                        From farm to kitchen, with pure organic care.
                    </p>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Gallery Navigation -->
    <div class="production-gallery">
        <div class="production-gallery__nav">
            <button class="production-gallery__nav-btn production-gallery__nav-btn--active" data-filter="all">All</button>
            <button class="production-gallery__nav-btn" data-filter="process">Making Process</button>
            <button class="production-gallery__nav-btn" data-filter="factory">Our Factory</button>
            <button class="production-gallery__nav-btn" data-filter="products">Spice Products</button>
        </div>
    </div>
    
    <!-- Gallery Section -->
    <div class="production-gallery">
        <div class="production-gallery__grid">
            <!-- Making Process Images -->

            <% data.map(function(col,i){ %>

            <div class="production-gallery__item" data-category="<%-col.gallery_category_id%>">
                <div class="production-gallery__category-label"><%-col.gallery_category_id%></div>
                <img src="/uploads/<%-col.gallery_image%>" alt="Harvesting organic spices" class="production-gallery__item-image">
                <div class="production-gallery__item-overlay">
                    <h3 class="production-gallery__item-title"><%-col.gallery_name%></h3>
                    <p class="production-gallery__item-description"><%-col.gallery_headline%></p>
                </div>
            </div>

             <%  }) %>
            
           
        </div>
    </div>
    
    <!-- Gallery Info -->
    <div class="production-gallery__info">
        <div class="production-gallery">
            <h2 class="production-gallery__info-title">Our Organic Commitment</h2>
            <p class="production-gallery__info-text">At Organic Masale, we believe in preserving traditional methods while maintaining the highest quality standards. Our spices are sourced directly from certified organic farms and processed in our state-of-the-art facility to bring you the purest flavors of India.</p>
            <p class="production-gallery__info-text">Every step of our production process - from harvesting to packaging - is carefully monitored to ensure we deliver spices with maximum aroma, flavor, and nutritional value.</p>
        </div>
    </div>

    <%-include("footer.ejs")%>