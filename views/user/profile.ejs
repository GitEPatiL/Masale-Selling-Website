<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile</title>

  <!-- âœ… Bootstrap 5 CDN CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- âœ… Bootstrap Icons (optional) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>

  <style>
    .profile-header {
      background: linear-gradient(to right, #f09819, #edde5d);
      color: #fff;
      padding: 50px 0;
      text-align: center;
      border-radius: 0 0 40px 40px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .profile-card {
      margin-top: -80px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      padding: 40px;
    }
    .profile-avatar {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      border: 5px solid #fff;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <!-- Profile Header -->
  <section class="profile-header">
    <div class="container">
      <h1 class="fw-bold">My Profile</h1>
      <p class="mb-0">Welcome, <%= user?.name %> ðŸ‘‹</p>
    </div>
  </section>

  <!-- Profile Info -->
  <section class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="profile-card text-center">
          <!-- <img src="/user/default-avatar.png" alt="Avatar" class="profile-avatar"> -->
          <h3 class="fw-bold mb-2"><%= user?.name %></h3>
          <p class="text-muted mb-4"><i class="bi bi-envelope"></i> <%= user?.email %></p>
          
          <div class="text-start mt-4">
            <h5 class="text-dark fw-semibold mb-3">Profile Information</h5>
            <ul class="list-group">
              <li class="list-group-item"><strong>Name:</strong> <%= user?.name %></li>
              <li class="list-group-item"><strong>Email:</strong> <%= user?.email %></li>
              <li class="list-group-item"><strong>Mobile:</strong> <%= user?.mobile %></li>
            </ul>
          </div>

          <div class="mt-4">
            <a href="/edit_profile" class="btn btn-warning px-4 me-2">Edit Profile</a>
            <a href="/" class="btn btn-danger px-4 me-2">Cancel</a>
            <a href="/logout" class="btn btn-outline-danger px-4">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <br><br><br>

  <!-- âœ… Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
