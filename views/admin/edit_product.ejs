<style>
  .heading-banner {
    background: linear-gradient(to right, #5b4d9c 0%, #5b4d9c 70%, #ffffff 100%);
    position: relative;
    color: white;
    padding: 20px 30px;
    font-size: 24px;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 6px;
    letter-spacing: 1px;
    margin-top: 20px;
    overflow: hidden;
  }

  .heading-banner::before,
  .heading-banner::after {
    content: '';
    position: absolute;
    top: 0;
    height: 100%;
    width: 5px;
    background-color: #ffcc33;
    transform: skewX(-45deg);
  }

  .heading-banner::before { right: 90px; }
  .heading-banner::after { right: 75px; }

  .form-box {
    background: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    margin-top: 20px;
  }

  .form-control, .form-select {
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .form-check-input:checked {
    background-color: #5b4d9c;
    border-color: #5b4d9c;
  }

  .product-preview {
    max-height: 80px;
    border-radius: 6px;
    margin-top: 5px;
  }

  .variant-row {
    transition: all 0.3s ease;
  }
</style>

<div class="container">
  <div class="heading-banner">Edit Product</div>

  <div class="form-box">
    <form action="/admin/update-product/<%= product.product_id %>" method="POST" enctype="multipart/form-data">
      <div class="row g-3">

        <!-- Product Name -->
        <div class="col-md-6">
          <label class="form-label">Product Name</label>
          <input type="text" name="product_name" class="form-control" value="<%= product.product_name %>" required>
        </div>

        <!-- Category -->
        <div class="col-md-6">
          <label class="form-label">Category</label>
          <select name="category_id" class="form-select" required>
            <option value="">Select Category</option>
            <% category.forEach(cat => { %>
              <option value="<%= cat.category_id %>" <%= product.category_id == cat.category_id ? "selected" : "" %>><%= cat.category_name %></option>
            <% }) %>
          </select>
        </div>

        <!-- Tags -->
        <div class="col-md-12">
          <label class="form-label">Tags</label>
          <div class="d-flex flex-wrap gap-2">
            <% tags.forEach(tag => { %>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="tags" value="<%= tag.tag_id %>"
                  id="tag_<%= tag.tag_id %>" <%= product.tagsArray.includes(tag.tag_id) ? "checked" : "" %>>
                <label class="form-check-label" for="tag_<%= tag.tag_id %>"><%= tag.tag_name %></label>
              </div>
            <% }) %>
          </div>
        </div>

        <!-- Ingredients -->
        <div class="col-md-12">
          <label class="form-label">Ingredients</label>
          <textarea name="ingredients" class="form-control" rows="3" required><%= product.ingredients %></textarea>
        </div>

        <div class="col-md-6">
          <label class="form-label">Details</label>
          <textarea name="detail" class="form-control" rows="3" required><%= product.detail %></textarea>
        </div>

        <div class="col-md-6">
          <label class="form-label">Usage</label>
          <textarea name="usage" class="form-control" rows="3" required><%= product.usage %></textarea>
        </div>

        <div class="col-md-6">
          <label class="form-label">Health Benefits</label>
          <textarea name="health_benifits" class="form-control" rows="3" required><%= product.health_benifits %></textarea>
        </div>

        <!-- Stock Quantity -->
        <div class="col-md-6">
          <label class="form-label">Stock Quantity</label>
          <input type="number" name="stockqty" class="form-control" value="<%= product.stockqty %>" required>
        </div>

        <!-- Discount -->
        <div class="col-md-6">
          <label class="form-label">Product Discount</label>
          <input type="number" name="discount" class="form-control" value="<%= product.discount %>" required>
        </div>

        <!-- Images -->
        <div class="col-md-6">
          <label class="form-label">Product Front Image</label>
          <input type="file" name="image" class="form-control" accept="image/*">
          <% if (product.image) { %>
            <img src="/uploads/<%= product.image %>" class="product-preview" />
          <% } %>
        </div>

        <div class="col-md-6">
          <label class="form-label">Product Back Image</label>
          <input type="file" name="image2" class="form-control" accept="image/*">
          <% if (product.image2) { %>
            <img src="/uploads/<%= product.image2 %>" class="product-preview" />
          <% } %>
        </div>

        <!-- Variants -->
   <div class="col-md-12">
  <label class="form-label">Weight & Price</label>
  <div id="variantContainer">
    <% if (variants && variants.length > 0) { %>
      <% variants.forEach((v, index) => { %>
        <div class="row g-2 variant-row mb-2">
          <div class="col-md-5">
            <input type="text" name="weight[]" class="form-control" placeholder="e.g. 100gm" value="<%= v.weight %>" required>
          </div>
          <div class="col-md-5">
            <input type="number" step="0.01" name="price[]" class="form-control" placeholder="Price" value="<%= v.price %>" required>
          </div>
          <div class="col-md-2">
            <button type="button" class="btn btn-danger w-100 remove-variant">X</button>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <!-- Always include at least one row -->
      <div class="row g-2 variant-row mb-2">
        <div class="col-md-5">
          <input type="text" name="weight[]" class="form-control" placeholder="e.g. 100gm" required>
        </div>
        <div class="col-md-5">
          <input type="number" step="0.01" name="price[]" class="form-control" placeholder="Price" required>
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-danger w-100 remove-variant">X</button>
        </div>
      </div>
    <% } %>
  </div>
  <button type="button" id="addVariant" class="btn btn-secondary mt-2">+ Add More</button>
</div>


        <!-- Submit -->
        <div class="col-12 text-end">
          <button type="submit" class="btn btn-primary">Update Product</button>
        </div>

      </div>
    </form>
  </div>
</div>

<script>
  // Add variant row
  document.getElementById("addVariant").addEventListener("click", function () {
    const row = `
      <div class="row g-2 variant-row mb-2">
        <div class="col-md-5">
          <input type="text" name="weight[]" class="form-control" placeholder="e.g. 100gm" required>
        </div>
        <div class="col-md-5">
          <input type="number" step="0.01" name="price[]" class="form-control" placeholder="Price" required>
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-danger w-100 remove-variant">X</button>
        </div>
      </div>`;
    document.getElementById("variantContainer").insertAdjacentHTML("beforeend", row);
  });

  // Remove variant row
  document.addEventListener("click", function (e) {
    if (e.target.classList.contains("remove-variant")) {
      const row = e.target.closest(".variant-row");
      if (document.querySelectorAll(".variant-row").length > 1) {
        row.remove();
      } else {
        // Clear values but keep the row
        row.querySelector('input[name="weight[]"]').value = "";
        row.querySelector('input[name="price[]"]').value = "";
      }
    }
  });

  // Form validation
  document.querySelector("form").addEventListener("submit", function(e) {
    const variants = document.querySelectorAll(".variant-row");
    let valid = true;
    
    variants.forEach(row => {
      const weight = row.querySelector('input[name="weight[]"]').value;
      const price = row.querySelector('input[name="price[]"]').value;
      
      if (!weight.trim() || !price.trim()) {
        alert("Please fill all variant fields");
        valid = false;
      }
    });
    
    if (!valid) {
      e.preventDefault();
      return false;
    }
    return true;
  });
</script>

