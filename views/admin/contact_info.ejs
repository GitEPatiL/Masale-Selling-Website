<%- include("navbar") %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Edit Contact Information</h2>

  <form action="/admin/update_contact_info" method="POST" class="bg-light p-4 rounded shadow">

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label">Location</label>
        <input type="text" name="location" value="<%= data.location || '' %>" class="form-control">
      </div>
      <div class="col-md-6">
        <label class="form-label">Phone Number</label>
        <input type="tel" name="phone" value="<%= data.phone || '' %>" class="form-control">
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label">Email</label>
        <input type="email" name="email" value="<%= data.email || '' %>" class="form-control">
      </div>
      <div class="col-md-6">
        <label class="form-label">Working Hours</label>
        <input type="text" name="working_hours" value="<%= data.working_hours || '' %>" class="form-control">
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label">Map Link</label>
      <input type="text" name="map_link" value="<%= data.map_link || '' %>" class="form-control">
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-success px-4">Update Info</button>
    </div>
  </form>
</div>

<%- include("footer") %>
