<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .why-choose-wrapper {
    max-width: 1200px;
    margin: 0 auto 60px;
    padding: 20px;
  }

  .choose-heading {
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin-bottom: 50px;
    background-color: #5b4d9c;
    padding: 18px 30px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(91, 77, 156, 0.25);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 30px;
  }

  .feature-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 25px;
    text-align: center;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
    transition: 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
  }

  .feature-img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 20px;
    box-shadow: 0 2px 10px rgba(91, 77, 156, 0.1);
  }

  .feature-title {
    font-size: 18px;
    font-weight: 600;
    color: #5b4d9c;
    margin-bottom: 10px;
  }

  .feature-description {
    font-size: 14px;
    color: #555;
    margin-bottom: 15px;
    min-height: 40px;
  }

  .edit-btn {
    display: inline-block;
    background-color: #5b4d9c;
    color: white;
    padding: 8px 18px;
    border-radius: 8px;
    font-size: 14px;
    text-decoration: none;
    font-weight: 500;
    transition: 0.3s ease;
  }

  .edit-btn:hover {
    background-color: #403373;
  }
</style>

<div class="why-choose-wrapper">
  <div class="choose-heading">Why Choose Us</div>

  <div class="card-grid">
    <% for (var i = 0; i < data.length; i++) { %>
      <div class="feature-card">
        <!-- Image -->
        <img src="/images/<%= data[i].image %>" alt="Feature" class="feature-img">

        <!-- Title + Description -->
        <div class="feature-title"><%= data[i].title %></div>
        <div class="feature-description"><%= data[i].description %></div>

        <!-- Edit Button -->
        <a href="/admin/edit/<%= data[i].id %>" class="edit-btn">✏️ Edit</a>
      </div>
    <% } %>
  </div>
</div>

<%- include("footer") %>
