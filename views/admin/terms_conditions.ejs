<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .terms-heading {
    font-size: 28px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    background-color: #5b4d9c;
    padding: 18px 30px;
    border-radius: 12px;
    margin: 40px auto;
    max-width: 600px;
    box-shadow: 0 5px 15px rgba(91, 77, 156, 0.2);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .terms-wrapper {
    max-width: 1100px;
    margin: 0 auto 60px;
    padding: 0 20px;
  }

  .terms-card {
    background-color: #ffffff;
    border-radius: 16px;
    box-shadow: 0 8px 25px rgba(91, 77, 156, 0.08);
    padding: 30px 25px;
    margin-bottom: 30px;
    transition: 0.3s ease;
  }

  .terms-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(91, 77, 156, 0.12);
  }

  .terms-title {
    font-size: 20px;
    font-weight: 600;
    color: #5b4d9c;
    margin-bottom: 10px;
  }

  .terms-desc {
    font-size: 15px;
    color: #444;
    line-height: 1.7;
    text-align: justify;
  }

  .update-btn {
    background-color: #5b4d9c;
    color: #fff;
    padding: 8px 20px;
    font-size: 14px;
    border-radius: 6px;
    font-weight: 500;
    border: none;
    text-decoration: none;
    display: inline-block;
    margin-top: 20px;
    transition: background-color 0.3s ease;
  }

  .update-btn:hover {
    background-color: #403373;
  }

  .no-terms {
    text-align: center;
    color: #888;
    font-size: 16px;
    margin-top: 60px;
  }

  .contact-note {
    background-color: #ebe6ff;
    padding: 20px 25px;
    border-left: 5px solid #5b4d9c;
    border-radius: 12px;
    font-size: 15px;
    color: #403373;
    font-weight: 500;
    max-width: 800px;
    margin: 0 auto 60px;
    box-shadow: 0 4px 15px rgba(91, 77, 156, 0.08);
    text-align: center;
  }
</style>

<div class="terms-heading">Terms & Conditions</div>

<div class="terms-wrapper">
  <% if (result.length > 0) { %>
    <% result.forEach((term, i) => { %>
      <div class="terms-card">
        <div class="terms-title"><%= i + 1 %>. <%= term.title %></div>
        <div class="terms-desc"><%= term.description %></div>
        <a href="/admin/update_terms/<%= term.id %>" class="update-btn">Update</a>
      </div>
    <% }) %>
  <% } else { %>
    <div class="no-terms">No terms and conditions available yet.</div>
  <% } %>
</div>

<div class="contact-note">
  For legal inquiries or support, email us at <strong>Masale@gmail.com</strong>
</div>

<%- include("footer") %>
