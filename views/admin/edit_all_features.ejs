<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
  }

  .feature-edit-wrapper {
    max-width: 700px;
    margin: 60px auto;
    background-color: #ffffff;
    padding: 40px 30px;
    border-radius: 16px;
    box-shadow: 0 8px 25px rgba(91, 77, 156, 0.08);
  }

  .feature-edit-title {
    font-size: 24px;
    font-weight: 700;
    color: #5b4d9c;
    text-align: center;
    margin-bottom: 30px;
    background-color: #ebe6ff;
    padding: 12px;
    border-radius: 10px;
    box-shadow: 0 4px 12px rgba(91, 77, 156, 0.1);
  }

  .form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 6px;
    display: block;
    font-size: 15px;
  }

  .form-control {
    width: 100%;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 15px;
    padding: 10px 12px;
    margin-bottom: 20px;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #5b4d9c;
    box-shadow: 0 0 0 3px rgba(91, 77, 156, 0.1);
    outline: none;
  }

  .submit-btn {
    background-color: #5b4d9c;
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
  }

  .submit-btn:hover {
    background-color: #403373;
  }

  .image-preview {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  .image-preview img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 50%;
    border: 1px solid #ddd;
  }
</style>

<div class="feature-edit-wrapper">
  <h2 class="feature-edit-title">Edit Feature</h2>

  <form action="/admin/update" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="id" value="<%= data.id %>">
    <input type="hidden" name="old_image" value="<%= data.image %>">

    <label class="form-label">Current Image</label>
    <div class="image-preview">
      <img src="/uploads/<%= data.image %>" alt="Current Feature Image">
    </div>

    <label class="form-label">New Image (optional)</label>
    <input type="file" name="image" class="form-control">

    <label class="form-label">Title</label>
    <input type="text" name="title" value="<%= data.title %>" class="form-control" required>

    <label class="form-label">Description</label>
    <textarea name="description" rows="5" class="form-control" required><%= data.description %></textarea>

    <button type="submit" class="submit-btn">Update Feature</button>
  </form>
</div>

<%- include("footer") %>
