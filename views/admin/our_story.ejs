<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .section-heading {
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin-bottom: 50px;
    background-color: #5b4d9c;
    padding: 18px 30px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(91, 77, 156, 0.25);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .story-card {
    display: flex;
    align-items: center;
    gap: 40px;
    background-color: #ffffff;
    padding: 30px;
    margin-bottom: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.06);
    flex-wrap: wrap;
  }

  .story-text {
    flex: 1 1 55%;
  }

  .story-title {
    font-size: 24px;
    font-weight: 700;
    color: #5b4d9c;
    margin-bottom: 16px;
    position: relative;
  }

  .story-title::after {
    content: "";
    display: block;
    width: 60px;
    height: 4px;
    background: #5b4d9c;
    margin-top: 8px;
  }

  .story-paragraph {
    font-size: 15px;
    color: #444;
    line-height: 1.7;
    margin-bottom: 12px;
  }

  .story-img {
    flex: 1 1 40%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .story-img img {
    width: 100%;
    height: auto;
    max-height: 320px;
    object-fit: contain;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .btn-update {
    background-color: #5b4d9c;
    color: white;
    padding: 8px 18px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    margin-top: 10px;
    display: inline-block;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-update:hover {
    background-color: #403373;
  }

  @media (max-width: 768px) {
    .story-card {
      flex-direction: column;
      text-align: center;
      padding: 20px;
    }

    .story-text,
    .story-img {
      flex: 1 1 100%;
    }

    .story-img img {
      max-height: 280px;
    }
  }
</style>

<div class="container py-5">
  <div class="section-heading">Our Story</div>

  <% for (var i = 0; i < our_story.length; i++) { %>
    <div class="story-card">
      <!-- Text Section -->
      <div class="story-text">
        <h2 class="story-title"><%= our_story[i].hiadding %></h2>
        <p class="story-paragraph"><%= our_story[i].p_frist %></p>
        <p class="story-paragraph"><%= our_story[i].p_second %></p>
        <p class="story-paragraph"><%= our_story[i].p_third %></p>
        <a href="/admin/edit_our_story/<%= our_story[i].id %>" class="btn-update">
          <i class="bi bi-pencil-fill me-1"></i> Update
        </a>
      </div>

      <!-- Image Section -->
      <div class="story-img">
        <img src="/images/<%= our_story[i].image %>" alt="Story Image">
      </div>
    </div>
  <% } %>
</div>

<%- include("footer") %>
