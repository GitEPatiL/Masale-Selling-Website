<%- include("navbar.ejs") %>

<style>
  .custom-heading {
    position: relative;
    background: linear-gradient(to right, #5b4d9c 0%, #5b4d9c 70%, #ffffff 100%);
    color: #fff;
    font-weight: bold;
    font-size: 26px;
    text-transform: uppercase;
    padding: 15px 40px;
    border-left: 6px solid #ffc107; 
    display: inline-block;
    width: 100%;
    margin-bottom: 30px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.2);
    border-radius: 4px 0 0 4px;
  }


  .custom-heading::after {
    content: '';
    position: absolute;
    top: 0;
    right: -60px;
    width: 60px;
    height: 100%;
    background: linear-gradient(
      -45deg,
      #ffc107 0 10px,
      #ffc107 10px,
      #0d572c 10px 15px,
      #0d572c 15px,
      #ff8c00 15px 20px,
      #ff8c00 20px,
      transparent 20px
    );
    transform: skewX(-10deg);
  }

  @media (max-width: 768px) {
    .custom-heading {
      font-size: 20px;
      padding: 12px 25px;
    }

    .custom-heading::after {
      width: 40px;
    }
  }
</style>

