<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .faq-heading {
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin-bottom: 50px;
    background-color: #5b4d9c;
    padding: 18px 30px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(91, 77, 156, 0.25);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .faq-container {
    max-width: 1000px;
    margin: 0 auto 60px;
    padding: 0 20px;
  }

  .faq-item {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(91, 77, 156, 0.08);
    margin-bottom: 25px;
    padding: 25px 30px;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(91, 77, 156, 0.12);
  }

  .faq-question {
    font-size: 18px;
    font-weight: 600;
    color: #5b4d9c;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-question::after {
    content: "▼";
    color: #999;
    transition: transform 0.2s ease;
  }

  .faq-item.active .faq-question::after {
    content: "▲";
    color: #5b4d9c;
  }

  .faq-answer {
    margin-top: 15px;
    font-size: 15px;
    color: #444;
    line-height: 1.6;
    display: none;
  }

  .faq-item.active .faq-answer {
    display: block;
  }

  .btn-update {
    background-color: #5b4d9c;
    color: white;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    border: none;
    text-decoration: none;
    margin-top: 12px;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .btn-update:hover {
    background-color: #403373;
  }

  @media (max-width: 576px) {
    .faq-item {
      padding: 20px;
    }

    .faq-question {
      font-size: 16px;
    }
  }
</style>

<div class="container py-5">
  <div class="faq-heading">Frequently Asked Questions</div>

  <div class="faq-container">
    <% if (result.length > 0) { %>
      <% result.forEach((faq) => { %>
        <div class="faq-item">
          <div class="faq-question"><%= faq.question %></div>
          <div class="faq-answer">
            <p><%= faq.answer %></p>
            <a href="/admin/edit_faq/<%= faq.id %>" class="btn-update">
              <i class="bi bi-pencil-fill me-1"></i> Update
            </a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-muted">No FAQs available at the moment.</p>
    <% } %>
  </div>
</div>

<script>
  document.querySelectorAll(".faq-question").forEach((question) => {
    question.addEventListener("click", () => {
      question.parentElement.classList.toggle("active");
    });
  });
</script>

