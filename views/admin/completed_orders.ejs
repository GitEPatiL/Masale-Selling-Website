<%- include("navbar.ejs") %>
<div class="container mt-4">
  <h3 class="mb-3 text-center">Completed  Orders</h3>

  <table id="completedOrdersTable" class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Email</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o.order_id %></td>
          <td><%= o.name %></td>
          <td><%= o.email %></td>
          <td>â‚¹<%= o.total_amount %></td>
          <td><span class="badge bg-success mt-3"><%= o.order_status %></span></td>
          <td><%= new Date(o.created_at).toLocaleString() %></td>
          <td>
        <a href="/admin/order_details/<%= o.order_id %>" class="btn btn-sm btn-primary">View</a>

          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

