<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .mission-heading {
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin-bottom: 50px;
    background-color: #5b4d9c;
    padding: 18px 30px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(91, 77, 156, 0.25);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .mission-card-wrapper {
    max-width: 1200px;
    margin: 0 auto 60px;
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
  }

  .mission-card {
    background-color: #ffffff;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(91, 77, 156, 0.08);
    width: 320px;
    padding: 30px 20px;
    text-align: center;
    transition: 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .mission-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(91, 77, 156, 0.1);
  }

  .mission-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    object-fit: contain;
  }

  .mission-title {
    font-size: 18px;
    font-weight: 600;
    color: #5b4d9c;
    margin-bottom: 10px;
  }

  .mission-desc {
    font-size: 15px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .update-btn {
    background-color: #5b4d9c;
    color: #fff;
    padding: 8px 18px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    border: none;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .update-btn:hover {
    background-color: #403373;
  }

  @media (max-width: 768px) {
    .mission-card {
      width: 100%;
      padding: 20px;
    }
  }
</style>

<div class="container py-5">
  <div class="mission-heading">Our Mission & Values</div>

  <div class="mission-card-wrapper">
    <% for (var i = 0; i < info.length; i++) { %>
      <div class="mission-card">
        <img src="/images/<%= info[i].image %>" alt="Mission Icon" class="mission-icon">
        <div class="mission-title"><%= info[i].heading %></div>
        <div class="mission-desc"><%= info[i].description %></div>
        <a href="/admin/update_mission/<%= info[i].id %>" class="update-btn">Update</a>
      </div>
    <% } %>
  </div>
</div>

<%- include("footer") %>
