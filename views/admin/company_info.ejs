<%- include("navbar") %>

<style>
  body {
    background-color: #fdfbf7;
    font-family: 'Segoe UI', sans-serif;
  }

  .company-wrapper {
    padding: 60px 20px;
    min-height: 100vh;
  }

  .company-title {
    font-size: 28px;
    font-weight: 700;
    color: #5b4d9c;
    margin-bottom: 40px;
    text-align: center;
    letter-spacing: 1px;
  }

  .company-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 30px;
  }

  .company-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 8px 20px rgba(91, 77, 156, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .company-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(91, 77, 156, 0.1);
  }

  .company-heading {
    font-size: 20px;
    font-weight: 700;
    color: #5b4d9c;
    text-transform: uppercase;
    margin-bottom: 8px;
  }

  .company-subheading {
    font-size: 16px;
    color: #403373;
    font-weight: 600;
    margin-bottom: 15px;
  }

  .company-paragraph {
    font-size: 15px;
    color: #555;
    line-height: 1.7;
    margin-bottom: 10px;
  }

  .btn-update {
    background-color: #5b4d9c;
    color: #fff;
    border: none;
    padding: 8px 20px;
    font-size: 14px;
    font-weight: 500;
    border-radius: 6px;
    transition: background 0.3s ease;
    text-decoration: none;
  }

  .btn-update:hover {
    background-color: #403373;
  }

  @media (max-width: 576px) {
    .company-card {
      padding: 20px;
    }
  }
</style>

<div class="container company-wrapper">
  <h2 class="company-title">All Company Info</h2>

  <div class="company-grid">
    <% for (let i = 0; i < company_info.length; i++) { %>
      <div class="company-card">
        <h4 class="company-heading"><%= company_info[i].heading_frist %></h4>
        <h6 class="company-subheading"><%= company_info[i].heading_second %></h6>
        <p class="company-paragraph"><%= company_info[i].p_frist %></p>
        <p class="company-paragraph"><%= company_info[i].p_second %></p>
        <p class="company-paragraph"><%= company_info[i].p_third %></p>

        <div class="text-end mt-3">
          <a href="/admin/edit_company/<%= company_info[i].id %>" class="btn-update">
            <i class="bi bi-pencil me-1"></i> Update
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include("footer.ejs") %>
